{% extends 'base.html.twig' %}

{% block title %}Liste des recettes{% endblock %}

{% block body %}
    <h1>Liste des recettes</h1>

    <table class="table">
        <tbody>
            <tr>
                {# <th>Id</th> #}
                {# <td>{{ recette.id }}</td> #}
            </tr>
            <tr>
                <th>Nom de la recette</th>
                <td>{{ recette.name }}</td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{{ recette.date | date('d-m-Y') }}</td>
            </tr>
            <tr>
                <th>Etapes de la préparation</th>
                <td>{{ recette.preparation }}</td>
            </tr>
            <tr>
                <th>Temps de cuisson</th>
                <td>{{ recette.time }}</td>
            </tr>
            <tr>
                <th>Ingrédients</th>
                <td>{{ recette.ingredient }}</td>
            </tr>
            <tr>
                <th>Photo du plat</th>
                <td>{{ recette.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recette_index') }}">Retour à la liste des recettes</a>

    <a href="{{ path('recette_edit', {'id': recette.id}) }}">Modifier</a>

    {{ include('recette/_delete_form.html.twig') }}
{% endblock %}
