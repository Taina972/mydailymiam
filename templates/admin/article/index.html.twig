{% extends 'base_admin.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom de l'article</th>
                <th>Date de publication</th>
                <th>Contenu</th>
                <th>Images</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.name }}</td>
                <td>{{ article.date | date('d-m-Y') }}</td>
                <td>{{ article.content }}</td>
                <td> <img src="{{ asset(article.image) }}" style="height:100px; object-fit:contain;"/></td>
                <td>
                    <a class="btn btn-sm btn-outline-danger" href="{{ path('article_show', {'id': article.id}) }}">Afficher</a>
                    <a class="btn btn-sm btn-outline-danger" href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Vous n'avez pas d'articles enregistrés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-danger" href="{{ path('article_new') }}">Créer un nouvel article</a>
{% endblock %}
