{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}


{% block body %}
    <!-- Bannière -->
    <section class="banniere">
        <div class="card bg-white text-black">
            <img src="{{ asset('assets/images/banniere3.jpg') }}" class="card-img" alt="banniere">
            <div class="card-img-overlay">
                <h5 class="card-title">Bienvenue sur <span class="MyDailyMiam">My Daily Miam !</span></h5>
                <p class="card-text2"><span>Créez votre propre livre de recettes en ligne en vous inspirant de nos modèles de recettes</span></p>
            </div>
        </div>
    </section>


    <!-- Carrousel -->
    <section>
        <div id="carouselExampleIndicators" class="carousel slide mb-3" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{ asset('assets/images/pancakes.jpg') }}" class="d-block w-100" alt="Pancakes">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('assets/images/saumon.jpg') }}" class="d-block w-100" alt="Saumon">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('assets/images/pizza.jpg') }}" class="d-block w-100" alt="Pizza">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Précédent</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Suivant</span>
            </a>
        </div>
    </section>

    <!-- Recettes -->
    <div class="container mb-5">

        <h1 class=" text-center">Les recettes préférées de la communauté</h1>

        <div class="row mt-3">
            {% for recette in recettes %}
                <div class="col-12 col-md-3">
                    <div class="card">
                        <img src="{{ asset(recette.image) }}" class="card-img-top" alt="Photo">
                        <div class="card-body">
                            <h5 class="card-title"> {{ recette.name }} </h5>
                            <p class="card-text"><small class="text-muted"> {{ recette.date | date('d-m-Y')}} </small></p>
                        </div>
                    </div>
                </div>
                
            {% endfor %}
        </div>

        <div class="row mt-3">
            {% for article in articles %}
                <div class="col-12 col-md-3">
                    <div class="card">
                        <img src="{{ asset(article.image) }}" class="card-img-top" alt="Photo">
                        <div class="card-body">
                            <h5 class="card-title"> {{ article.name }} </h5>
                            <p class="card-text"><small class="text-muted"> {{ article.date | date('d-m-Y')}} </small></p>
                        </div>
                    </div>
                </div>
                
            {% endfor %}
        </div>                   
        
    </div>

    <!-- Contact -->
    {# <section class="m-auto col-md-5 text-center">
